<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SplashScreen"
    android:background="#F1F1F4">


    <TextView
        android:id="@+id/welcom"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="WELCOME"
        android:layout_centerHorizontal="true"
        android:layout_above="@+id/tukpic"
        android:textSize="30dp"
        android:layout_marginBottom="10dp"
        android:textColor="#000000"
        android:textStyle="bold"
        />
    <TextView
        android:id="@+id/mekikathi"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="KIKATHI AND MEKIKA "
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/tukpic"
        android:textSize="25dp"
        android:layout_marginTop="5dp"
        android:textColor="#000000"
        android:textStyle="bold"/>
    <TextView
        android:id="@+id/sacco"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="SACCO "
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/mekikathi"
        android:textSize="25dp"
        android:layout_marginTop="5dp"
        android:textColor="#000000"
        android:textStyle="bold"
        />
        <ImageView
            android:id="@+id/tukpic"
            android:layout_width="250dp"
            android:layout_height="250dp"
            android:src="@drawable/tukpirate"
            android:layout_centerInParent="true"

            />
    <TextView
        android:id="@+id/rieng"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Tunawapeleka na rieng' "
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/sacco"
        android:textSize="16dp"
        android:layout_marginTop="0dp"
        android:textColor="#2B2B2C"
        android:textStyle="bold"/>

</RelativeLayout>